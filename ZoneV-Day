  <script>
    function moveNo() {
      const noBtn = document.getElementById('no');

      // Make sure the button moves using absolute positioning
      noBtn.style.position = 'absolute';

      // Keep the button fully visible by subtracting its own size
      const maxLeft = Math.max(0, window.innerWidth  - noBtn.offsetWidth  - 24);
      const maxTop  = Math.max(0, window.innerHeight - noBtn.offsetHeight - 24);

      const left = Math.random() * maxLeft;
      const top  = Math.random() * maxTop;

      noBtn.style.left = `${left}px`;
      noBtn.style.top  = `${top}px`;
    }

    function yes() {
      alert('Yay!');
    }
  </script>
